<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzcoder.mapper.ArticleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fzcoder.entity.Article">
        <id column="id" property="id" />
        <result column="author_id" property="authorId" />
        <result column="title" property="title" />
        <result column="date" property="date" />
        <result column="update_time" property="updateTime" />
        <result column="introduction" property="introduction" />
        <result column="category_id" property="categoryId" />
        <result column="tags" property="tags" />
        <result column="cover" property="cover" />
        <result column="content_md" property="contentMd" />
        <result column="content_html" property="contentHtml" />
        <result column="status" property="status" />
    </resultMap>

    <!-- Article VO -->
    <resultMap id="ArticleViewMap" type="com.fzcoder.vo.ArticleView">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="date" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="introduction" property="introduction" />
        <result column="cover" property="cover" />
        <association property="author"
                     javaType="com.fzcoder.vo.UserView"
                     column="author_id"
                     select="com.fzcoder.mapper.UserMapper.selectViewObjectById" />
        <association property="category"
                     javaType="com.fzcoder.vo.CategoryView"
                     column="category_id"
                     select="com.fzcoder.mapper.CategoryMapper.selectViewObjectById" />
        <collection property="tags"
                    javaType="java.util.List"
                    column="id"
                    select="com.fzcoder.mapper.TagMapper.selectRelationList">
            <id property="tagId" column="tag_id"/>
            <result property="tagName" column="tag_name"/>
        </collection>
    </resultMap>

    <!-- 展示文章VO -->
    <resultMap id="PostMap" type="com.fzcoder.vo.Post" extends="ArticleViewMap">
        <result column="content_html" property="contentHtml" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, author_id, title, date, update_time, introduction, category_id,
        tags, cover, content_md, content_html, status
    </sql>

    <select id="selectPostById" resultMap="PostMap">
        SELECT
        id, author_id, title, `date`, update_time,
        introduction, category_id, tags, cover, content_html
        FROM
        tb_article
        WHERE id = #{id}
    </select>

    <select id="selectPages" resultMap="ArticleViewMap">
        SELECT
        id, author_id, title, `date`, update_time,
        introduction, category_id, tags, cover
        FROM
        tb_article
        ${ew.customSqlSegment}
    </select>

    <select id="countById" resultType="int">
        SELECT COUNT(id) FROM tb_article WHERE id=#{id}
    </select>

</mapper>
